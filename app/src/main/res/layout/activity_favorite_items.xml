<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver1"
    android:id="@+id/nested_fav"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.blue_b.rest.view.fragments.fragmentHomeMainScreen.FragmentHomeScreen"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorite_RV"
            />

        <ProgressBar
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_items_in_favorite"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:id="@+id/no_more_item"/>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

