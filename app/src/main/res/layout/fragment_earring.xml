<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.fragmentHomeMainScreen.FragmentNotification">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/continer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/earring"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/header_TV"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/see_all_rl"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="20">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:layout_centerHorizontal="true"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/see_all_TV"
                        android:textColor="@color/colorBlue4"/>

                </RelativeLayout>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set_RV"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="0dp"
                android:visibility="visible"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>

