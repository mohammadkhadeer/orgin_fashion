<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.blue_b.rest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/blue_b_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/blue_b_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".view.activity.registration.Gender"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />

        <activity
            android:name=".view.activity.registration.NameActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.AllOffersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAVVeBZ4ra11TGUWcScjWTwJpHKAC-XnlY" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".view.activity.StoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.FavoriteItems"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme44" />
        <activity
            android:name=".view.activity.ReportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme44" />
        <activity
            android:name=".view.activity.SelectCountryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity android:name=".view.activity.Setting" />
        <activity
            android:name=".view.activity.ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.SubCategory"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.AllCategory"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.Cart"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.AboutUs"
            android:theme="@style/AppTheme22" />
        <activity
            android:name=".view.activity.Language"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.ItemDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.CategoryItem"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />
        <activity
            android:name=".view.activity.addItem.AddItem"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".view.activity.mainScreem.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme23" />

        <service
            android:name=".service.FcmMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.SaveFCMTokenService" />

        <receiver android:name=".broadcastReceiver.NotificationReceiver" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>